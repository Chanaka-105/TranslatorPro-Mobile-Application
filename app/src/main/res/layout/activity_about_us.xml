<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#20000000">

    <ImageView
        android:layout_width="60dp"
        android:id="@+id/icon"
        android:layout_centerHorizontal="true"
        android:layout_height="60dp"
        android:src="@mipmap/ic_launcher_new"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="15dp"
        />

    <TextView
        android:id="@+id/txt_titre"
        android:layout_below="@+id/icon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="15dp"
        android:text="TranslatorPro "
        android:fontFamily="sans-serif-condensed"
        android:textSize="25dp"
        android:textStyle="bold"
        android:textAlignment="center"/>

    <TextView
        android:id="@+id/txt_infos"
        android:layout_below="@id/txt_titre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="2dp"
        android:text="Version 1.1.0"
        android:textSize="15dp"
        android:textStyle="bold"
        android:fontFamily="monospace"
        android:textAlignment="center"/>

    <TextView
        android:id="@+id/txt_name"
        android:layout_below="@id/txt_infos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="5dp"
        android:text="Chanaka Madushan"
        android:textSize="15dp"
        android:textStyle="bold"
        android:fontFamily="monospace"
        android:textAlignment="center"/>


    <TextView
        android:id="@+id/txt_about_us"
        android:layout_below="@id/txt_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:padding="0sp"
        android:gravity="center"
        android:text="ktcmadushan105@gmail.com"
        android:textSize="12dp"
        android:textStyle="bold"
        android:fontFamily="monospace"
        android:textAlignment="center"/>




    <Button
        android:id="@+id/btn_close"
        android:layout_below="@id/txt_about_us"
        android:layout_width="100dp"
        android:textColor="@color/colorAccent"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_height="50dip"
        android:text="Close"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/linearbackground"
        android:textSize="18sp"
        android:fontFamily="sans-serif-smallcaps"
        android:stateListAnimator="@null"
        android:textAllCaps="false" />


</RelativeLayout>